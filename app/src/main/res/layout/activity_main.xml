<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/backgr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_bck"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgbtn1"
        android:layout_width="417dp"
        android:layout_height="300dp"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="260dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgbtn3"
        app:srcCompat="@drawable/play1" />

    <ImageButton
        android:id="@+id/imgbtn2"
        android:layout_width="243dp"
        android:layout_height="152dp"
        android:background="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.852"
        app:srcCompat="@drawable/ex1" />

    <ImageView
        android:id="@+id/imgbtn3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="318dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="43dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/questionsign" />

    <ImageView
        android:id="@+id/imgbtn4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="234dp"
        app:layout_constraintEnd_toStartOf="@+id/imgbtn3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings" />


</androidx.constraintlayout.widget.ConstraintLayout>